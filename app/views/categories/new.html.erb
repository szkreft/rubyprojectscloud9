<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |t| %>
        <div class="form-group">
            <div class="control-label-col-sm-2">
            <%= t.label :name %>
            </div>
            <div class="col-sm-5">
            <%= t.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
        </div>
    </div>

        <div class="form-group">
            <div class="col-sm-10">
            <%= t.submit class: "btn btn-primary btn-lg" %>
            </div>
        </div>
<% end %>
        <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel and return to home page", root_path %> ]
        </div>
