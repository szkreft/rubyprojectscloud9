

<%= render 'shared/errors', obj: @article %>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |t| %>
        <div class="form-group">
            <div class="control-label-col-sm-2">
            <%= t.label :title %>
            </div>
            <div class="col-sm-5">
            <%= t.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
    </div>
        <div class="form-group">
            <div class="control-label-col-sm-2">
                <%= t.label :description %>
                </div>
            <div class="col-sm-8">
                <%= t.text_area :description, rows: 10, class: "form-control", placeholder: "Description of the article" %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-10">
            <%= t.submit class: "btn btn-primary btn-lg" %>
            </div>
        </div>
<% end %>
        <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel and return to articles listing", articles_path %> ]
        </div>
    </div>
</div>